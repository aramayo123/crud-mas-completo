<%- include ../layouts/cabecera.ejs %>
<form action="/libros" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="my-input">Titulo</label>
        <input type="text" name="titulo" id="my-input" class="form-control" >
    </div>
    <div class="form-group">
        <label for="my-input">Imagen</label>
        <input type="file" name="imagen" id="" class="form-control-file" >
    </div>
    <div class="form-group">
        <label for="my-input">Descripcion</label>
        <input type="text" name="descripcion" id="" class="form-control" >
    </div>
    <div class="form-group">
        <label for="my-input">Precio</label>
        <input type="text" name="precio" id="" class="form-control" >
    </div>

    <button class="btn btn-success" type="submit">Guardar</button>
    <a href="/libros" class="btn btn-primary">Cancelar</a>
</form>
